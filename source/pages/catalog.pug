        img(src="../img/"+ color + 'shit.png', alt="shit")

section.catalog.container
    .row
        +catalogitem('grey')
        +catalogitem('beige')
        +catalogitem('grey')
        +catalogitem('beige')
    .row
        +catalogitem('grey')
        +catalogitem('beige')
        +catalogitem('grey')
